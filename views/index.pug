doctype html
html
  head
    title TravelCast
    link(rel='stylesheet', href='style.css')
    script.
      const GOOGLE_PLACES_API_KEY = '#{process.env.GOOGLE_PLACES_API_KEY}';
      const OPENWEATHERMAP_API_KEY = '#{process.env.OPENWEATHERMAP_API_KEY}';
  body
    header
      h1 TravelCast
    main
    div#flex-container
      div#search-container
        p#search-label Search for a location:
        input#search(type='text', placeholder='Enter a location')
        div#results-container
          ul#results
          h2 Nearby Tourist Attractions
          ul#places-list
      div#map-container
        div#mapCont
          #map
    footer
  script(src='script.js')